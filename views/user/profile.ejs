<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS -->
</head>
<body>
    <div class="container">
        <h1>User Profile</h1>

        <!-- Success Message -->
        <% if (successMessage) { %>
            <div class="success"><%= successMessage %></div>
        <% } %>

        <!-- User Details Section -->
        <h3>Your Profile Details:</h3>
        <ul>
            <li><strong>Username:</strong> <%= user.username %></li>
            <li><strong>First Name:</strong> <%= profile.first_name %></li>
            <li><strong>Last Name:</strong> <%= profile.last_name %></li>
            <li><strong>Email:</strong> <%= profile.email %></li>
            <li><strong>Phone:</strong> <%= profile.phone %></li>
            <li><strong>Address:</strong> <%= profile.address %></li>
        </ul>

        <!-- Edit Profile Form -->
        <h3>Edit Profile:</h3>
        <form method="POST" action="/profile/update">
            <select name="updateField">
                <option value="firstName">First Name</option>
                <option value="lastName">Last Name</option>
                <option value="email">Email</option>
                <option value="phone">Phone</option>
                <option value="address">Address</option>
            </select>
            <input type="text" name="newValue" required placeholder="Enter new value" />
            <button type="submit">Update Profile</button>
        </form>
        
        <!-- Update Password Link -->
        <h3>Update Your Password:</h3>
        <p>If you want to update your password, click the button below:</p>
        <a href="/update-password" class="btn">Update Password</a>

        <!-- Activity Logs Section -->
        <h3>Your Activity Logs:</h3>
        <table>
            <thead>
                <tr>
                    <th>Action</th>
                    <th>Timestamp</th>
                </tr>
            </thead>
            <tbody>
                <% if (recentActivity.length > 0) { %>
                    <% recentActivity.forEach(activity => { %>
                        <tr>
                            <td><%= activity.action %></td>
                            <td><%= new Date(activity.timestamp).toLocaleString() %></td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="2">No activity logs available.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <a href="/dashboard" class="btn">Back to Dashboard</a>
    </div>
</body>
</html>
