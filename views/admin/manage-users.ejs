<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Users</title>
    <link rel="stylesheet" href="../css/admin/manage-users.css">
</head>
<body>
    <h1>Manage Users</h1>
    <nav>
        <ul>
            <li><a href="/admin/dashboard">Dashboard</a></li>
            <li><a href="/admin/logout">Logout</a></li>
        </ul>
    </nav>

    <!-- manage  user section -->
        <section>
            <h2>Manage Users</h2>
            <% if (users && users.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Actions</th>
                            <th>Reset Password</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.username %></td>
                                <td><%= user.email %></td>
                                <td>
                                    <a href="/admin/update-user/<%= user.id %>">Update</a> |
                                    <form action="/admin/delete-user/<%= user.id %>" method="POST" style="display:inline;">
                                        <button type="submit">Delete</button>
                                    </form>
                                </td>
                                <td>
                                    <!-- Reset Password Form -->
                                    <form action="/admin/reset-password/<%= user.id %>" method="POST" style="display:inline;">
                                        <input type="password" name="newPassword" placeholder="New Password" required>
                                        <button type="submit">Reset</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No users found.</p>
            <% } %>
        </section>
</body>
</html>
